<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/CardView_UserInf_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/User_Inf_Image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@android:color/holo_purple" />

            <LinearLayout
                android:id="@+id/UserInf_Text_Container"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/User_Inf_Image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/UserInf_ID_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/User_Inf_Image"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="hoidol"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/UserInf_Tag_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserInf_ID_Text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/User_Inf_Image"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="#여행 #한국 #전통 #aaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Sub_UserInf_Container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/UserInf_Time_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/User_Inf_Image"
                    android:gravity="right|center_vertical"
                    android:text="3 minutes ago"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/UserInf_Location_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserInf_ID_Text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/User_Inf_Image"
                    android:gravity="right|center_vertical"
                    android:text="in seoul"
                    android:textSize="8sp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/CardView_Image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/CardView_UserInf_Container"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_green_light" />

        <RelativeLayout
            android:id="@+id/CardView_Content_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CardView_Image">

            <TextView
                android:id="@+id/UserInf_Content_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="The park is a fvorite among skaters in california and it definitely desrves it. The Park is complete with plenty of smooth banks to my name is hoidol. that's why it is my nick @android:string/unknownName"
                android:textSize="10sp" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>